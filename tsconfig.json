{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "declaration": true,
    "esModuleInterop": true,
    "inlineSourceMap": false,
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "listEmittedFiles": false,
    "listFiles": false,
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "pretty": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "target": "es5",
    "outDir": "dist",
    "traceResolution": false,
    "types": [
      "node",
      "jest"
    ]
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules",
    "dist",
    "src/__test__"
  ],
  "include": [
    "src"
  ]
}